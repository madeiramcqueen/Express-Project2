<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header') %>

    <body>
        <%- include('../partials/navbar') %>
            <h1>Class Subjects</h1>
            <p>
            <div class="container text-center">
                <div class="row justify-content-center">

                    <% subjects.forEach(function(s) { %>

                        <div class="col-2 card" style="width: 18rem;"> <a href="/subjects/<%= s._id %>">
                                <%= s.name %>
                            </a>

                            <form action="/subjects/<%= s._id %>?_method=DELETE" class="delete-form" method="POST">
                                <button class="btn-close" aria-label="Close" type="submit"></button>
                            </form>


                        </div>
                        <% }); %>
                </div>
            </div>
            </p>
            <div style="text-align:center">
                <a href="/subjects/new" class="btn btn-dark">Add A Subject</a>
            </div>
    </body>

</html>